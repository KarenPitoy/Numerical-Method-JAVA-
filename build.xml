<!-- in the project's Project Properties dialog box.-->
<project name="NMethods" default="default" basedir=".">
    <description>Builds, tests, and runs the project NMethods.</description>
    
    <!-- Import the default build script generated by NetBeans -->
    <import file="nbproject/build-impl.xml"/>
    
    <!-- Pre-compile target to set up dependencies -->
    <target name="-pre-compile">
        <!-- Create the lib directory if it does not exist -->
        <mkdir dir="lib"/>
        
        <!-- Copy dependencies to the lib directory (assuming you've placed them manually) -->
        <!-- You can remove this block if the JARs are already in the lib directory -->
        <!--
        <copy todir="lib">
            <fileset dir="C:\Users\karen\Documents\NetBeansProjects\NMethods\lib">
                <include name="exp4j-0.4.8.jar"/>
                <include name="commons-math3-3.6.1.jar"/>
            </fileset>
        </copy>
        -->
        
        <!-- Add the dependencies to the classpath -->
        <path id="project.classpath">
            <fileset dir="lib">
                <include name="exp4j-0.4.8.jar"/>
                <include name="commons-math3-3.6.1.jar"/>
            </fileset>
        </path>
        
        <!-- Update the compilation classpath -->
        <property name="javac.classpath" refid="project.classpath"/>
    </target>
    
    <!-- Customize other targets if needed -->

</project>
